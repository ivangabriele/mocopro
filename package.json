{
	"name": "mocopro",
	"description": "A CLI tool to install, run, and manage MCP servers locally using containers, with built-in configuration for popular MCP clients.",
	"license": "AGL-3.0",
	"version": "0.0.0",
	"type": "module",
	"engines": {
		"bun": ">=1.3 <2",
		"node": ">=24"
	},
	"bin": {
		"mocopro": "./dist/index.js"
	},
	"scripts": {
		"build": "bun build src/index.ts --outdir dist --target node",
		"compile": "bun run ./scripts/compile.ts",
		"dev": "bun run src/index.ts",
		"link": "bun run build && ln -s $(pwd)/dist/index.js ~/.local/bin/mocopro",
		"pack": "bun pm pack",
		"pack:dry": "bun pm pack --dry-run",
		"test": "bun test",
		"test:e2e": "bun test e2e",
		"test:lint": "biome check --write --no-errors-on-unmatched .",
		"test:type": "tsc --noEmit",
		"test:unit": "bun test src",
		"test:unit:cover": "bun test src --coverage"
	},
	"dependencies": {
		"bhala": "3.0.4",
		"commander": "14.0.2",
		"simple-git": "3.30.0",
		"yaml": "2.8.2"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@ivangabriele/biome-config": "2.0.0",
		"@types/bun": "1.3.5",
		"@types/node": "24.10.4",
		"typescript": "5.9.3"
	},
	"author": {
		"name": "Ivan Gabriele",
		"email": "ivan.gabriele@protonmail.com",
		"url": "https://www.ivangabriele.com"
	},
	"bugs": "https://github.com/ivangabriele/mocopro/issues",
  "homepage": "https://github.com/ivangabriele/mocopro#readme",
	"keywords": ["cli", "docker", "local", "manager", "mcp", "mcp-server", "model-context-protocol", "podman", "self-hosted", "server", "smithery"],
	"repository": {
    "type": "git",
    "url": "git+https://github.com/ivangabriele/mocopro.git"
  }
}
